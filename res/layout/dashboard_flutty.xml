<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="7"
    tools:context=".DashboardFlutty">

  <androidx.cardview.widget.CardView
      android:id="@+id/item_lagu"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginHorizontal="5dp"
      android:layout_marginTop="8dp"
      android:layout_weight="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="8dp"
          android:fontFamily="@font/p1"
          android:text="Halo, Selamat Datang!"
          android:textColor="#310055"
          android:textSize="14dp"></TextView>

      <TextView
          android:id="@+id/txt_user"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="28dp"
          android:fontFamily="@font/p2"
          android:text="Nama User"
          android:textColor="#310055"
          android:textSize="14dp"></TextView>
      <ImageView
          android:id="@+id/logout"
          android:layout_width="30dp"
          android:layout_height="35dp"
          android:layout_gravity="center"
          android:layout_marginTop="8dp"
          android:layout_marginBottom="10dp"
          android:layout_marginStart="320dp"
          android:src="@drawable/logout"></ImageView>
    </RelativeLayout>
  </androidx.cardview.widget.CardView>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="200dp"
      android:orientation="vertical"
      android:layout_weight="1.5"
      android:layout_marginTop="10dp"
      android:background="@drawable/home"
      android:gravity="bottom">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Flutty Music"
        android:fontFamily="@font/p1"
        android:textSize="23dp"
        android:paddingLeft="10dp"
        android:textColor="#310055"></TextView>
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="6"
      android:orientation="vertical"
      android:weightSum="2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5dp"
        android:weightSum="2">
      <!--         card rock-->
      <androidx.cardview.widget.CardView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:id="@+id/hrock"
          android:layout_weight="1"
          app:cardElevation="2dp"
          android:layout_margin="3dp"
          app:cardCornerRadius="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
          <ImageView
              android:layout_width="match_parent"
              android:layout_height="70dp"
              android:layout_gravity="center"
              android:src="@drawable/rock"></ImageView>

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:text="Rock"
              android:fontFamily="@font/p2"
              android:textSize="18dp"
              android:gravity="center"
              android:textColor="#310055"></TextView>

        </LinearLayout>

      </androidx.cardview.widget.CardView>
      <!--         card pop-->
      <androidx.cardview.widget.CardView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:id="@+id/hpop"
          android:layout_weight="1"
          app:cardElevation="2dp"
          android:layout_margin="3dp"
          app:cardCornerRadius="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
          <ImageView
              android:layout_width="match_parent"
              android:layout_height="70dp"
              android:layout_gravity="center"
              android:src="@drawable/pop"></ImageView>

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:text="Pop"
              android:fontFamily="@font/p2"
              android:textSize="18dp"
              android:gravity="center"
              android:textColor="#310055"></TextView>
        </LinearLayout>

      </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!--      grid baris ke 2-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginBottom="50dp"
        android:padding="3dp"
        android:weightSum="2">
      <!--         card Indie-->
      <androidx.cardview.widget.CardView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:id="@+id/hindie"
          android:layout_weight="1"
          app:cardElevation="2dp"
          android:layout_margin="5dp"
          app:cardCornerRadius="3dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
          <ImageView
              android:layout_width="match_parent"
              android:layout_height="70dp"
              android:layout_gravity="center"
              android:src="@drawable/indie"></ImageView>

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:text="Indie"
              android:fontFamily="@font/p2"
              android:textSize="18dp"
              android:gravity="center"
              android:textColor="#310055"></TextView>

        </LinearLayout>

      </androidx.cardview.widget.CardView>
      <!--         card country-->
      <androidx.cardview.widget.CardView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:id="@+id/hcountry"
          android:layout_weight="1"
          app:cardElevation="2dp"
          android:layout_margin="5dp"
          app:cardCornerRadius="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
          <ImageView
              android:layout_width="match_parent"
              android:layout_height="70dp"
              android:layout_gravity="center"
              android:src="@drawable/country"></ImageView>

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:text="Country"
              android:fontFamily="@font/p2"
              android:textSize="18dp"
              android:gravity="center"
              android:textColor="#310055"></TextView>

        </LinearLayout>

      </androidx.cardview.widget.CardView>
    </LinearLayout>
  </LinearLayout>

</LinearLayout>