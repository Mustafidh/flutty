<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_lagu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="10dp"
        android:layout_weight="1"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/albm"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginVertical="5dp"
                android:layout_marginEnd="300dp"
                android:src="@drawable/noimage"></ImageView>

            <TextView
                android:id="@+id/jlagu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/p1"
                android:text="Strangers"
                android:textColor="#310055"
                android:textSize="14dp"></TextView>

            <TextView
                android:id="@+id/artis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/p2"
                android:text="Bring Me The Horizon"
                android:textColor="#310055"
                android:textSize="12dp"></TextView>
            <ImageView
                android:id="@+id/ply"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="310dp"
                android:src="@drawable/play"></ImageView>

            <ImageView
                android:id="@+id/edt"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginTop="75dp"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/edit"></ImageView>
            <ImageView
                android:id="@+id/hapus"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginTop="74dp"
                android:layout_marginStart="50dp"
                android:src="@drawable/delete"></ImageView>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    </LinearLayout>
