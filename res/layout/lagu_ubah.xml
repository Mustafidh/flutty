<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".LaguUbahR">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ubah Lagu"
        android:textColor="#310055"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:fontFamily="@font/p1"
        android:textSize="18dp"
        android:layout_marginBottom="5dp"></TextView>
    <ImageView
        android:layout_margin="10dp"
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:id="@+id/logo_1"
        android:src="@drawable/ilubah"></ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Judul Lagu"
        android:layout_marginHorizontal="20dp"
        android:textColor="#310055"
        android:fontFamily="@font/p2"
        android:textSize="14dp"
        android:layout_marginBottom="5dp"></TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:hint="Masukan Judul Lagu"
        android:id="@+id/edt_judul"
        android:layout_marginBottom="10dp"></EditText>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Artis"
        android:textColor="#310055"
        android:layout_marginHorizontal="20dp"
        android:fontFamily="@font/p2"
        android:textSize="14dp"
        android:layout_marginBottom="5dp"></TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukan Nama Artis"
        android:layout_marginHorizontal="20dp"
        android:id="@+id/edt_artis"
        android:layout_marginBottom="10dp"></EditText>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unggah Album"
        android:textColor="#310055"
        android:layout_marginHorizontal="20dp"
        android:fontFamily="@font/p2"
        android:textSize="14dp"
        android:layout_marginBottom="5dp"></TextView>
    <ImageView
        android:layout_marginHorizontal="20dp"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:id="@+id/iv_upload"
        android:src="@drawable/uimage"></ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unggah Lagu"
        android:textColor="#310055"
        android:layout_marginHorizontal="20dp"
        android:fontFamily="@font/p2"
        android:textSize="14dp"
        android:layout_marginBottom="5dp"></TextView>
    <ImageView
        android:layout_marginHorizontal="20dp"
        android:layout_width="70dp"
        android:layout_height="55dp"
        android:id="@+id/iv_lagu"
        android:src="@drawable/upload"></ImageView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:fontFamily="@font/p1"
        android:id="@+id/btn_ubah"
        android:backgroundTint="#310055"
        android:text="Ubah"></Button>
</LinearLayout>